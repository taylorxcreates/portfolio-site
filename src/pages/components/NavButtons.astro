---
const buttonsTop = [
  { label: 'Design', href: '/#design', color: '#8000ff' },      
  { label: 'Home', href: '/', color: '#e1ff06' },               
  { label: 'Dev', href: '/#development', color: '#e012e6' },    
];

const buttonsBottom = [
  { label: 'Bio', href: '/#bio', color: '#ff671e' },            
  { label: 'Contact', href: '/#contact', color: '#cecece' },    
  { label: 'Work', href: '/#work', color: '#287ffe' },          
];
---

<div class="nav-wrapper">
  <div class="nav-row">
    {buttonsTop.map((btn) => (
      <a href={btn.href} class="nav-btn" style={`background-color: ${btn.color}`}>{btn.label}</a>
    ))}
  </div>
  <div class="nav-row">
    {buttonsBottom.map((btn) => (
      <a href={btn.href} class="nav-btn" style={`background-color: ${btn.color}`}>{btn.label}</a>
    ))}
  </div>
</div>


